# Ling Engine BFF集成环境变量配置示例
# 复制此文件内容到 .env 文件中并根据需要修改配置

# ================================
# BFF集成配置
# ================================

# 是否启用BFF集成功能
BFF_INTEGRATION_ENABLED=true

# JWT配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=RS256
JWT_EXPIRATION_HOURS=24

# Clerk认证配置
CLERK_ISSUER=https://real-elephant-35.clerk.accounts.dev
CLERK_JWKS_URL=https://real-elephant-35.clerk.accounts.dev/.well-known/jwks.json
CLERK_WEBHOOK_SECRET=your-clerk-webhook-secret-here

# ================================
# 数据库配置
# ================================

# PostgreSQL数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_streaming_call
DB_USER=postgres
DB_PASSWORD=12345678

# ================================
# Redis配置
# ================================

# Redis缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DATABASE=0

# ================================
# 服务器配置
# ================================

# 服务器监听配置
SERVER_HOST=0.0.0.0
SERVER_PORT=12393

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,https://your-bff-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=true

# ================================
# AI服务配置
# ================================

# OpenAI API配置
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=1.0

# DeepSeek API配置
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.7

# ================================
# 其他配置
# ================================

# 日志级别
LOG_LEVEL=INFO

# 调试模式
DEBUG=false

# 模型缓存目录
MODEL_CACHE_DIR=./models

# 音频缓存目录
AUDIO_CACHE_DIR=./cache
